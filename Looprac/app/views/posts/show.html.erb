<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>
<p>
  <strong>User:</strong>
  <%= @post.user.username %>
</p>

 

  <%= link_to like_post_path(@post), class: "like", method: :put do%>
    <button type="button" class="btn btn-info" aria-label="Left Align">
    <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
    <span class="badge"><%= @post.get_upvotes.size %></span>
  </button>
  <% end %>
      
         <%=link_to unlike_post_path(@post), class: "like", method: :put do%>
    <button type="button" class="btn btn-info" aria-label="Left Align">
    <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
    <span class="badge"><%= @post.get_downvotes.size %></span>
  </button>
  <% end %>

	<h4>Share on Twitter or Facebook or G+</h4>
		<%= social_share_button_tag(@post.title, :popup => "true") %>

<% if user_signed_in? %>
  <h2>Comments</h2>
  <%= render @post.comments %>
 
  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
<% end %> 

<%= link_to 'Back', posts_path %>
