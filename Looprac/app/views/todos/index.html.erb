

<p id="notice"><%= notice %></p>

<div class="container">

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'View list', todos_path %></li>
  <li><%= link_to 'New todo', new_todo_path %></li>
</ul>

<h1>Listing Todos</h1>
  <div class="row">
    <div class="col-sm-2">Title</div>
    <div class="col-sm-4">Notes</div>
    <div class="col-sm-6"></div>
  </div>
  <% @todos.each do |todo| %>
    <div class="row">
      <div class="col-sm-2"> <%= todo.title %> </div>
      <div class="col-sm-4"> <%= todo.notes %> </div>
      <div class="col-sm-2"> <%= link_to 'Show', todo, class: 'btn btn-info btn-xs' %> 
      </div>
      <div class="col-sm-2"> <%= link_to 'Edit', todo, class: 'btn btn-info btn-xs' %> 
      </div>
      <div class="col-sm-2"> <%= link_to todo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do%> <i class="glyphicon glyphicon-remove"></i> <% end %> </div>
    </div>
  <% end %>

  
<br>

<%= link_to new_todo_path, class: 'btn btn-success' do%>
  <i class="glyphicon glyphicon-plus"></i> New Todo
<% end %>
</div>

